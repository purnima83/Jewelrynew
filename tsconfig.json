{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",  
    "paths": {
      "@/*": ["./*"],
      "@/context/*": ["context/*"],
      "@/models/*": ["models/*"],   // ✅ Add this line
      "@/utils/*": ["utils/*"],      // ✅ You can add if needed too
      "@/lib/*": ["lib/*"]           // ✅ For mongo db connections etc
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
